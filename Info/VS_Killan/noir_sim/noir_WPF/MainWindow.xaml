        <StackPanel HorizontalAlignment="Left" Height="271" Margin="10,10,0,0" VerticalAlignment="Top" Width="153">
            <Label Content="Ip Servidor"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="192.168.0.250" x:Name="txtIP"/>
            <Label Content="Puerto"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="4433" x:Name="txtPort"/>
            <Button Content="Conectar" Click="Button_Click_1"/>
            <Label Content="Data"/>
            <TextBox Margin="0, 10" TextWrapping="NoWrap" Text="" Height="100" x:Name="txtData" />
        </StackPanel>
    </Grid>
</Window>
